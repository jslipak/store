<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" lang="es">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/stylev2.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>webstore</title>
</head>

<body>
        <% include Partials/header %>

   <!-- aca tiene que ir con un for , para que cargue directo de mongo -->
     <% console.log(products) %>   
    <div class="container">
        <div class="row">
    <% products.forEach(function(product){ %>
            <div class="col-lg-2 col-md-3  col-sm-4 ">
                <div class="thumbnail">
                    <img src="<%= product.urlImageProduct %>" alt=" <%= product.nameProduct %>">
                    <div class="">
                        <p class="izq_text"><strong>Nombre:</strong><%= product.nameProduct %></p>
                        <p class="izq_text"><strong>Descripcion:</strong><%= product.descriptionProduct %></p>
                        <p class="izq_text"><strong>Precio:</strong><%= product.price %></p>
                        <a href="./products/<%= product.id %>">Seleccion</a>
                    </div>
                </div>
            </div>
    <% }) %>
        </div>
        
    <% include Partials/footer %>
    </div>

    <!-- thumbnail fin -->

</body>

</html>
